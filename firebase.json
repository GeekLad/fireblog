{
  "hosting": {
    "public": "public",
    "rewrites": [ {
        "source": "**",
        "destination": "/index.html"
    } ]
  },
  "database": {
    "rules": {
      "Posts": {
        ".indexOn": ["timestamp", "path"],
        ".read": true,
        ".write": "auth != null && auth.token.email_verified == true && auth.token.email == root.child('Admin').val()"
      },
      "Users": {
        ".indexOn": ["email"],
        ".read": false,
        ".write": false
      }
    }
  }
}